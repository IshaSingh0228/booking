pipeline{
   agent any
   
   triggers{
        pollSCM('* * * * *')
    }
   
   tools{
       maven 'maven3'
       jdk 'jdk11'
   }
  stages {
          stage("build & SonarQube analysis") {
            agent any
            steps {
              withSonarQubeEnv('sonar-server') {
                bat 'java -version'
                bat 'mvn clean test sonar:sonar'
         
              }
            }
          }
          
          stage('package'){
          steps{
          bat 'mvn package'
          }
}    
    stage("collect artifact"){
    steps{
     archiveArtifacts artifacts:'target/*.jar', followSymlinks:false
    }
    }
    
    stage("Uploading to artifactory"){
    steps{
    rtUpload (
    serverId: 'ARTIFACTORY_SERVER',
    spec: '''{
          "files": [
            {
              "pattern": "target/*.jar",
              "target": "art-doc-dev-loc"
            }
         ]
    }''',
)
}}

}
post{
   success{
   mail bcc: '', body: 'This message is auto-generated by jenkins ', cc: '', from: '', replyTo: '', subject: 'Built completed', to: 'thesinghanias@gmail.com'
   }
}
}
